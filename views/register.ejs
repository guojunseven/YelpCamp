<%-include("partials/header")%>
<div class="row">
    <div class="col-md-12">
        <form class="form-signin" action="/register" method="POST">
            <h1 class="h3 mb-3 font-weight-border">Please sign up</h1>
            <label for="username" class="sr-only">Username</label>
            <input type="text" id="username" name="username" class="form-control" placeholder="User Name" required autofocus>
        
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
            
            <label for="username" class="sr-only">avatar</label>
            <input class="form-control" type="text" name="avatar" placeholder="avatar" required>
        
        
            <label for="username" class="sr-only">firstName</label>
            <input class="form-control" type="text" name="firstName" placeholder="firstName">
        
        
            <label for="username" class="sr-only">lastName</label>
            <input class="form-control" type="text" name="lastName" placeholder="lastName">
        
            <label for="username" class="sr-only">email</label>
            <input class="form-control" type="email" name="email" placeholder="email">
        
            <label for="username" class="sr-only">Admin Code</label>
            <input class="form-control" type="text" name="admin" placeholder="Admin Code">
        
            <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
    
        </form>
        <div class="form-signin">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%-include("partials/footer")%>